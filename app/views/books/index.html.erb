<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-bordered border-primary">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book, class: "btn btn-primary text-white" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-primary text-white" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary  text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path ,  class: "btn btn-success  text-white" %>
